{
  "collectionName": "components_shared_work_experiences",
  "info": {
    "displayName": "Work Experience"
  },
  "options": {},
  "attributes": {
    "companyName": {
      "type": "string",
      "required": true
    },
    "role": {
      "type": "string",
      "required": true
    },
    "startDate": {
      "type": "date",
      "required": true
    },
    "endDate": {
      "type": "date",
      "conditions": {
        "visible": {
          "!=": [
            {
              "var": "isCurrent"
            },
            true
          ]
        }
      }
    },
    "isCurrent": {
      "type": "boolean",
      "default": false
    },
    "description": {
      "type": "richtext",
      "required": true
    }
  },
  "config": {}
}
